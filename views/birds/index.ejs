<% include ../partials/header %>

<div class="container">
  <header class="jumbotron text-center">
    <div class="container">
      <h1>Welcome to Bird Spotter!</h1>
      <p>
        Where bird watching enthusiasts and photographers can unite and share
        pics of their favorite bird spottings and where they're located.
      </p>
      <p>
        <a class="btn btn-warning btn-lg" href="/birds/new">Add a new bird pic</a>
      </p>
    </div>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <!-- Show all birds -->
    <% birds.forEach((bird) => { %>
    <div class="cold-md-3 col-sm-6">
      <div class="thumbnail" style="padding:10px;">
        <image src=" <%= bird.image %>">
        </image>
        <div class="caption">
          <h3><%= bird.name %></h3>
          <h5><%= bird.location %></h5>
        </div>
        <a href="/birds/<%= bird._id %>" class="btn btn-primary">More info</a>
      </div>
    </div>

    <% }); %>
  </div>
</div>

<% include ../partials/footer %>