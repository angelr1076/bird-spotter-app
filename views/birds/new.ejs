<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add a new bird</h1>
    <div style="width: 30%; margin: auto;">
      <!-- Form for adding a new bird and its attributes -->
      <form action="/birds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="image url" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" class="form-control" rows="5" name="description"
            placeholder="description" />
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" placeholder="San Diego, CA" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/birds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>