<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit bird</h1>
    <div style="width: 30%; margin: auto;">
      <!-- Form for adding a new bird and its attributes -->
      <form action="/birds/<%= bird._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="bird[name]" placeholder="name" value="<%= bird.name %>" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="bird[image]" placeholder="image url"
            value="<%= bird.image %>" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" class="form-control" rows="5" name="bird[description]"
            placeholder="description" value="<%= bird.description %>" />
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= bird.location %>" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/birds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>