<!-- add header page -->
<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add a comment to <%= bird.name %></h1>
    <div style="width: 30%; margin: auto;">
      <!-- from to add a comment to a bird -->
      <form action="/birds/<%= bird._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>

      <a href="/birds/<%= bird._id %>">Go Back</a>
    </div>
  </div>
</div>
